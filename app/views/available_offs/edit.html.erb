<h1>Editing available_off</h1>
<% form_for(:available_off, :url => employee_available_off_path(@employee), :html => {:method => :put}) do |f| %>
<%= f.error_messages %>
  <p>
    <%= f.label :leave_policy_id %><br />
    <%= f.select :leave_policy_id, @employee.available_offs.collect{|a|[a.leave_policy.policy_type.capitalize,a.id]} %>
  <p>
    <%= f.label :no_of_days %><br />
    <%= f.text_field :no_of_days %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', employee_available_off_path %> |
<%= link_to 'Back', employee_available_offs_path %>